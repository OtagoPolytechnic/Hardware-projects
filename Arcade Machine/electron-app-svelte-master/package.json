{
  "name": "Retrolog",
  "publisher": "@OP BIT",
  "private": true,
  "version": "3.0.1",
  "type": "module",
  "main": "electron/main.cjs",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron": "vite build && electron .",
    "electron-pack": "npm run build && electron-builder",
    "preelectron-pack": "npm run build"
  }, 
  "build": {
    "appId": "com.retrolog.app",
    "productName": "Retrolog",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "portable",
      "icon": "public/favicon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/favicon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/favicon.ico"
    }
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^2.4.2",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12",
    "svelte": "^4.2.7",
    "vite": "^4.4.5",
    "wait-on": "^8.0.4"
  }
}
